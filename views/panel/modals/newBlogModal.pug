#newBlogModal.modal.fade(tabindex='-1' aria-labelledby='newUserLabel' aria-hidden='true')
    .modal-dialog.modal-lg
        .modal-content
            .modal-header
                h2#newUserLabel.modal-title.fw-bolder.fs-5 Nueva entrada
                button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body
                .row
                    .col-6
                        .mb-3
                            label.form-label(for='title') Titulo
                            input.form-control#title(type='text', aria-describedby='textHelp')
                        .mb-3
                            label.form-label(for='subtitle') Sub titulo

                            input.form-control#subtitle(type='text', aria-describedby='textHelp')
                        .mb-3
                            label.form-label(for='date') Fecha de publicacion

                            input.form-control#date(type='date')
                        .mb-4
                            label.form-label(for='image') Imagen

                            input.form-control#image(type='file' isEdit="false").image
                            input.form-control#image_save(type='text' style="display:none;")
                        .mb-4
                            label.mx-2.form-check-label(for="isPublicate") Publicado:
                            input.form-check-input#isPublicate(type='checkbox', aria-describedby='activeHelp')

                    .col-6

                        .mb-3
                            label.form-label(for='content') Texto del blog
                            div#content






            .modal-footer
                button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cerrar
                button.btn.btn-primary(type='button')#saveBlog  Guardar
